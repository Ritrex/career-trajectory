mixin auth(data,issignup=false,isedit=false)

    form(action=`/${issignup?"login":'signup'}}` method='post')
    
        .form-group
            if issignup || isedit
                label(for='email') Email
                input.form-control(type='email', name='email' placeholder='Email')
            label(for='name') Name
            input.form-control(type='text', name='name' placeholder='Name' autofocus=true)
            label(for='password') Password
            input.form-control(type='password', name='password')
            if issigup || isedit
                label(for='conf-password') Password
                input.form-control(type='password', name='conf-password')
        button.btn.btn-primary(type='submit')="Blue"